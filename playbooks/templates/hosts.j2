ansible_become=True
ansible_ssh_common_args="-o IdentityFile=/oa-testing/openshift-dev.pem"

[OSEv3:children]
masters
nodes
etcd
new_etcd
new_masters
new_nodes
lb

[masters]
{% for host in master_list %}
{{ host.public_dns_name }}  # {{ host.private_dns_name }}
{% endfor %}

[compute]
{% for host in compute_list %}
{{ host.public_dns_name }}  # {{ host.private_dns_name }}
{% endfor %}

[infra]
{% for host in infra_list %}
{{ host.public_dns_name }}  # {{ host.private_dns_name }}
{% endfor %}

[nodes:children]
